RPC_URL=https://mainnet.base.org
CHAIN_ID=8453
PRICE_ORACLE_ID=58
FREQUENCY=hourly

# Comma-separated list of private keys (no 0x prefix or with 0x both supported)
PRIVATE_KEYS=0xxxxxxxxx
# Copy from Request Headers identity value
AUTH_TOKEN=Bearer xxxx

# Strategy config
POLL_INTERVAL_MS=20000
# every 5 mins check claims
CLAIMS_INTERVAL_MS=300000
BUY_AMOUNT_USDC=1
TARGET_PROFIT_PCT=50
SLIPPAGE_BPS=100
MAX_GAS_ETH=0.015
GAS_PRICE_GWEI=0.005
CONFIRMATIONS=2

# Strategy selection
# STRATEGY_MODE=dominant -> buy the side >= TRIGGER_PCT
# STRATEGY_MODE=opposite -> if a side is within TRIGGER_BAND of TRIGGER_PCT, buy the opposite side
STRATEGY_MODE=dominant
TRIGGER_PCT=60
TRIGGER_BAND=5
